;-------------------------------------------------
;写真撮影
;特殊コマンド
;-------------------------------------------------
@COM190
PRINTL 写真撮影
STR:0 = 写真撮影
CALL KOJO_MESSAGE_COM

ITEM:フィルム -= 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 80

SOURCE:不潔 = 500
SOURCE:液体追加 = 100
SOURCE:屈従 = 500
SOURCE:快Ｂ = 400
SOURCE:18 = 400


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 400

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
IF ABL:マゾっ気 == 0
	TIMES SOURCE:屈従 , 0.80
	SOURCE:液体追加 += 0
	SOURCE:欲情追加 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES SOURCE:屈従 , 1.00
	SOURCE:液体追加 += 20
	SOURCE:欲情追加 += 30
ELSEIF ABL:マゾっ気 == 2
	TIMES SOURCE:屈従 , 1.20
	SOURCE:液体追加 += 40
	SOURCE:欲情追加 += 70
ELSEIF ABL:マゾっ気 == 3
	TIMES SOURCE:屈従 , 1.40
	SOURCE:液体追加 += 70
	SOURCE:欲情追加 += 120
ELSEIF ABL:マゾっ気 == 4
	TIMES SOURCE:屈従 , 1.50
	SOURCE:液体追加 += 110
	SOURCE:欲情追加 += 180
ELSEIF ABL:マゾっ気 == 5
	TIMES SOURCE:屈従 , 1.70
	SOURCE:液体追加 += 150
	SOURCE:欲情追加 += 250
ELSEIF ABL:マゾっ気 == 6
	TIMES SOURCE:屈従 , 1.90
	SOURCE:液体追加 += 200
	SOURCE:欲情追加 += 300
ELSEIF ABL:マゾっ気 == 7
	TIMES SOURCE:屈従 , 2.10
	SOURCE:液体追加 += 250
	SOURCE:欲情追加 += 350
ELSEIF ABL:マゾっ気 == 8
	TIMES SOURCE:屈従 , 2.30
	SOURCE:液体追加 += 300
	SOURCE:欲情追加 += 400
ELSEIF ABL:マゾっ気 == 9
	TIMES SOURCE:屈従 , 2.50
	SOURCE:液体追加 += 350
	SOURCE:欲情追加 += 450
ELSEIF ABL:マゾっ気 >= 10
	TIMES SOURCE:屈従 , 3.00
	SOURCE:液体追加 += 500
	SOURCE:欲情追加 += 500
ENDIF

;マゾを見る
IF TALENT:マゾ == 1
	TIMES SOURCE:屈従 , 2.50
	TIMES SOURCE:液体追加 , 1.20
	TIMES SOURCE:欲情追加 , 1.20
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;値段の計算を行い、売却処理は後で行う
CALL PRICE_PICTURE

PRINTFORM %CALLNAME:PLAYER%の撮影経験＋１
PRINTL 被写経験＋１
EXP:PLAYER:撮影経験 += 1
EXP:被写経験 += 1

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

