;-------------------------------------------------
;搾乳
;愛撫系派生コマンド
;-------------------------------------------------
@COM509
PRINTL 搾乳
STR:0 = 搾乳
SELECTCOM = 509
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 100

SOURCE:情愛 = 100
SOURCE:性行動 = 40
SOURCE:屈従 = 100
SOURCE:反感追加 = 50
SOURCE:18 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 100

;調教者が［幼稚］か［幼児退行］
IF TALENT:PLAYER:幼児／幼児退行 || TALENT:PLAYER:幼稚
	TIMES SOURCE:情愛 , 1.20
	TIMES SOURCE:性行動 , 1.20
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の指の汚れが移動
	STAIN:胸 |= STAIN:PLAYER:手
	STAIN:PLAYER:手 |= STAIN:胸

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 7
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1


RETURN 1

