;-------------------------------------------------
;歌唱トレーニング
;コミュニケーション系コマンド、レベル4
;-------------------------------------------------
@COM27
PRINTL 歌唱トレーニング
STR:0 = 歌唱トレーニング
CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 50

SOURCE:達成感 = 200
SOURCE:露出 = 50
SOURCE:逸脱 = 100
SOURCE:快Ｂ = 100
SOURCE:18 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;歌唱技能は先に処理しておく
IF ABL:歌唱技能 == 0
	TIMES SOURCE:達成感 , 0.50
	TIMES SOURCE:露出 , 0.50
	TIMES SOURCE:快Ｂ , 2.50
	TIMES SOURCE:18 , 2.50
ELSEIF ABL:歌唱技能 == 1
	TIMES SOURCE:達成感 , 0.70
	TIMES SOURCE:露出 , 0.70
	TIMES SOURCE:快Ｂ , 1.20
	TIMES SOURCE:18 , 1.20
ELSEIF ABL:歌唱技能 == 2
	TIMES SOURCE:達成感 , 0.90
	TIMES SOURCE:露出 , 0.90
	TIMES SOURCE:快Ｂ , 0.90
	TIMES SOURCE:18 , 0.90
ELSEIF ABL:歌唱技能 == 3
	TIMES SOURCE:達成感 , 1.10
	TIMES SOURCE:露出 , 1.10
	TIMES SOURCE:快Ｂ , 0.60
	TIMES SOURCE:18 , 0.60
ELSEIF ABL:歌唱技能 == 4
	TIMES SOURCE:達成感 , 1.30
	TIMES SOURCE:露出 , 1.30
	TIMES SOURCE:快Ｂ , 0.30
	TIMES SOURCE:18 , 0.30
ELSEIF ABL:歌唱技能 == 5
	TIMES SOURCE:達成感 , 1.50
	TIMES SOURCE:露出 , 1.50
	TIMES SOURCE:快Ｂ , 0.10
	TIMES SOURCE:18 , 0.10
ELSEIF ABL:歌唱技能 == 6
	TIMES SOURCE:達成感 , 1.70
	TIMES SOURCE:露出 , 1.70
	TIMES SOURCE:快Ｂ , 0.10
	TIMES SOURCE:18 , 0.10
ELSEIF ABL:歌唱技能 == 7
	TIMES SOURCE:達成感 , 1.90
	TIMES SOURCE:露出 , 1.90
	TIMES SOURCE:快Ｂ , 0.10
	TIMES SOURCE:18 , 0.10
ELSEIF ABL:歌唱技能 == 8
	TIMES SOURCE:達成感 , 2.30
	TIMES SOURCE:露出 , 2.30
	TIMES SOURCE:快Ｂ , 0.10
	TIMES SOURCE:18 , 0.10
ELSEIF ABL:歌唱技能 == 9
	TIMES SOURCE:達成感 , 2.70
	TIMES SOURCE:露出 , 2.70
	TIMES SOURCE:快Ｂ , 0.10
	TIMES SOURCE:18 , 0.10
ELSEIF ABL:歌唱技能 >= 10
	TIMES SOURCE:達成感 , 4.00
	TIMES SOURCE:露出 , 4.00
	TIMES SOURCE:快Ｂ , 0.10
	TIMES SOURCE:18 , 0.10
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;歌唱経験
PRINTFORML %EXPNAME:64%＋１
EXP:歌唱経験 += 1

;依存度ベクトル
TFLAG:33 = 1


RETURN 1

