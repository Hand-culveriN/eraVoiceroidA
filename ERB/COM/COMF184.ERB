;-------------------------------------------------
;野外プレイ
;特殊なコマンド
;-------------------------------------------------
@COM184
PRINTL 野外プレイ
STR:0 = 野外プレイ
CALL KOJO_MESSAGE_COM

;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:29 == 1
	TEQUIP:29 = 0
	RETURN 1
ELSE
	TEQUIP:29 = 1
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 150

SOURCE:不潔 = 800
SOURCE:屈従 = 1300
SOURCE:快Ｂ = 300
SOURCE:18 = 600


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 600

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
IF ABL:マゾっ気 == 0
	TIMES SOURCE:屈従 , 0.80
	SOURCE:液体追加 += 0
	SOURCE:欲情追加 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES SOURCE:屈従 , 1.00
	SOURCE:液体追加 += 20
	SOURCE:欲情追加 += 30
ELSEIF ABL:マゾっ気 == 2
	TIMES SOURCE:屈従 , 1.20
	SOURCE:液体追加 += 40
	SOURCE:欲情追加 += 70
ELSEIF ABL:マゾっ気 == 3
	TIMES SOURCE:屈従 , 1.40
	SOURCE:液体追加 += 70
	SOURCE:欲情追加 += 120
ELSEIF ABL:マゾっ気 == 4
	TIMES SOURCE:屈従 , 1.50
	SOURCE:液体追加 += 110
	SOURCE:欲情追加 += 180
ELSEIF ABL:マゾっ気 == 5
	TIMES SOURCE:屈従 , 1.70
	SOURCE:液体追加 += 150
	SOURCE:欲情追加 += 250
ELSEIF ABL:マゾっ気 == 6
	TIMES SOURCE:屈従 , 1.90
	SOURCE:液体追加 += 200
	SOURCE:欲情追加 += 300
ELSEIF ABL:マゾっ気 == 7
	TIMES SOURCE:屈従 , 2.10
	SOURCE:液体追加 += 250
	SOURCE:欲情追加 += 350
ELSEIF ABL:マゾっ気 == 8
	TIMES SOURCE:屈従 , 2.30
	SOURCE:液体追加 += 300
	SOURCE:欲情追加 += 400
ELSEIF ABL:マゾっ気 == 9
	TIMES SOURCE:屈従 , 2.50
	SOURCE:液体追加 += 350
	SOURCE:欲情追加 += 450
ELSEIF ABL:マゾっ気 >= 10
	TIMES SOURCE:屈従 , 3.00
	SOURCE:液体追加 += 500
	SOURCE:欲情追加 += 500
ENDIF

;依存度ベクトル
TFLAG:33 = 3


RETURN 1


