;-------------------------------------------------
;乳房電極
;ハードな調教コマンド、レベル4
;-------------------------------------------------
@COM150
PRINTL 乳房電極
STR:0 = 乳房電極
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:24 == 0
	TEQUIP:24 = 1
ELSE
	TEQUIP:24 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 300
LOSEBASE:気力 += 450

SOURCE:情愛 = 500
SOURCE:中毒充足 = 1500
SOURCE:屈従 = 300
SOURCE:逸脱 = 800
SOURCE:快Ｂ = 1200
SOURCE:18 = 1200


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 1200


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;異常経験が5未満のとき、異常経験追加
IF EXP:異常経験 < 5
	EXP:異常経験 += 1
	PRINTL 異常経験＋１
ENDIF

;レズ経験
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


