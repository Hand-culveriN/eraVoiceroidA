;-------------------------------------------------
;オナホール
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM43
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
IF TEQUIP:25
	PRINTL 触手ペニス責め
	STR:0 = 触手ペニス責め
	SELECTCOM = 169
ELSE
	PRINTL オナホール
	STR:0 = オナホール
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:12 == 0
	TEQUIP:12 = 1
ELSE
	TEQUIP:12 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 80

SOURCE:快Ｃ = 200
SOURCE:屈従 = 20
SOURCE:快Ｂ = 30
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 30

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手ペニス責めなら、触手体液がペニスに付く
SIF TEQUIP:25
	STAIN:ペニス |= 32

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:25 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 1


RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM43
;オナホール装備中
IF TEQUIP:25
	PRINTL ＜触手ペニス責め中＞
ELSE
	PRINTL ＜オナホール装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 20

SOURCE:快Ｃ += 100
SOURCE:屈従 += 10
SOURCE:快Ｂ += 15
SOURCE:18 += 15


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:25 == 1
	T += 1


RETURN 1

