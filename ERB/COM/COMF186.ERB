@COM186
PRINTL 羞恥プレイ
STR:0 = 羞恥プレイ
CALL KOJO_MESSAGE_COM

;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:30 == 1
	TEQUIP:30 = 0
	RETURN 1
ELSE
	TEQUIP:30 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 200

SOURCE:不潔 += 500
SOURCE:逸脱 += 300
SOURCE:快Ｂ += 100
SOURCE:18 += 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 500

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
A = 700
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
	SOURCE:液体追加 += 0
	SOURCE:欲情追加 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
	SOURCE:液体追加 += 20
	SOURCE:欲情追加 += 30
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.20
	SOURCE:液体追加 += 40
	SOURCE:欲情追加 += 70
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.40
	SOURCE:液体追加 += 70
	SOURCE:欲情追加 += 120
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 1.50
	SOURCE:液体追加 += 110
	SOURCE:欲情追加 += 180
ELSEIF ABL:マゾっ気 == 5
	TIMES A , 1.70
	SOURCE:液体追加 += 150
	SOURCE:欲情追加 += 250
ELSEIF ABL:マゾっ気 == 6
	TIMES A , 1.90
	SOURCE:液体追加 += 200
	SOURCE:欲情追加 += 300
ELSEIF ABL:マゾっ気 == 7
	TIMES A , 2.10
	SOURCE:液体追加 += 250
	SOURCE:欲情追加 += 350
ELSEIF ABL:マゾっ気 == 8
	TIMES A , 2.30
	SOURCE:液体追加 += 300
	SOURCE:欲情追加 += 400
ELSEIF ABL:マゾっ気 == 9
	TIMES A , 2.50
	SOURCE:液体追加 += 350
	SOURCE:欲情追加 += 450
ELSEIF ABL:マゾっ気 >= 10
	TIMES A , 3.00
	SOURCE:液体追加 += 500
	SOURCE:欲情追加 += 500
ENDIF
SOURCE:屈従 += A

;依存度ベクトル
TFLAG:33 = 3


RETURN 1


