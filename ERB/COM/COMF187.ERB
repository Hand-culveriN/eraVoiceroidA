;-------------------------------------------------
;お風呂場プレイ
;特殊なコマンド
;-------------------------------------------------
@COM187
PRINTL お風呂場プレイ
STR:0 = お風呂場プレイ
CALL KOJO_MESSAGE_COM

;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:31 == 1
	TEQUIP:31 = 0
	;シャワーも外す
	TEQUIP:32 = 0
	RETURN 1
ELSE
	TEQUIP:31 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 30

SOURCE:不潔 = 100
SOURCE:屈従 = 200
SOURCE:快Ｂ = 50
SOURCE:18 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 50


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;装備時に汚れをリセットする（風呂に来て汚れたままもどうかということで）
STAIN:口 = 0
STAIN:手 = 0
STAIN:ペニス = 2
STAIN:ヴァギナ = 1
STAIN:アナル = 8
STAIN:胸 = 0


;依存度ベクトル
TFLAG:33 = 2

RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM187
;お風呂場プレイ

PRINTL ＜お風呂場プレイ中＞

LOSEBASE:体力 += 10
LOSEBASE:気力 += 10

SOURCE:不潔 += 50
SOURCE:露出 += 100
SOURCE:18 += 50



RETURN 1

