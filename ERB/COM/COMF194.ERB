;-------------------------------------------------
;ザーメンキス
;特殊コマンド
;-------------------------------------------------
@COM194
PRINTL ザーメンキス
STR:0 = ザーメンキス
CALL KOJO_MESSAGE_COM


;汚れの計算
Y = 0
;愛液の汚れ
SIF STAIN:PLAYER:ペニス & 1
	Y += 1
;精液の汚れ
SIF STAIN:PLAYER:ペニス & 4
	Y += 3
;アナルの汚れ
SIF STAIN:PLAYER:ペニス & 8
	Y += 7
SIF STAIN:PLAYER:ペニス & 16
	Y += 15

SIF TALENT:汚臭鈍感
	Y /= 3
SIF TALENT:汚臭敏感
	Y *= 2


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 80

SOURCE:達成感 = 420
SOURCE:痛み = 150
SOURCE:逸脱 = 1200
SOURCE:快Ｂ = 500
SOURCE:18 = 500

;上のほうで計算した汚れデータ
SOURCE:反感追加 = Y*40 + 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:恭順追加 += 300

;助手と奴隷の相性によって、全体のソースが変化
IF ASSI >= 0
	T = NO:TARGET
	A = NO:PLAYER
	SOURCE:性行動 *= RELATION:A
	SOURCE:液体追加 *= RELATION:A
	SOURCE:逸脱 *= RELATION:A
	SOURCE:恭順追加 *= RELATION:A
	SOURCE:快Ｂ *= RELATION:A
	SOURCE:18 *= RELATION:A
	SOURCE:性行動 /= 100
	SOURCE:液体追加 /= 100
	SOURCE:逸脱 /= 100
	SOURCE:恭順追加 /= 100
	SOURCE:快Ｂ /= 100
	SOURCE:18 /= 100
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;調教者の口の汚れと奴隷の口の汚れを処理
S = STAIN:PLAYER:口
STAIN:PLAYER:口 |= STAIN:口
STAIN:口 |= S

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 5
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF


RETURN 1

