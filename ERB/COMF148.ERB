;-------------------------------------------------
;拡張バルーン
;ハードな調教コマンド、レベル4
;-------------------------------------------------
@COM148
PRINTL 拡張バルーン
STR:0 = 拡張バルーン
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:22 == 0
	TEQUIP:22 = 1
ELSE
	TEQUIP:22 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 150
LOSEBASE:1 += 200

SOURCE:2 = 200
SOURCE:7 = 800
SOURCE:13 = 300
SOURCE:14 = 400
SOURCE:17 = 700
SOURCE:18 = 700


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 700

;Aへの苦痛は先に処理しておく
;EXP:Ａ経験をみる
IF EXP:1 < EXPLV:1
	TIMES SOURCE:7 , 3.00
	TIMES SOURCE:18 , 3.00
ELSEIF EXP:1 < EXPLV:2
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF EXP:1 < EXPLV:3
	TIMES SOURCE:7 , 0.80
	TIMES SOURCE:18 , 1.50
ELSEIF EXP:1 < EXPLV:4
	TIMES SOURCE:7 , 0.60
	TIMES SOURCE:18 , 1.20
ELSEIF EXP:1 < EXPLV:5
	TIMES SOURCE:7 , 0.40
ELSEIF EXP:1 >= EXPLV:5
	TIMES SOURCE:7 , 0.20
ENDIF

;PALAM:潤滑をみる
IF PALAM:4 < PALAMLV:1
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF PALAM:4 < PALAMLV:2
	TIMES SOURCE:7 , 1.00
	TIMES SOURCE:18 , 1.50
ELSEIF PALAM:4 < PALAMLV:3
	TIMES SOURCE:7 , 0.60
ELSEIF PALAM:4 < PALAMLV:4
	TIMES SOURCE:7 , 0.30
ELSEIF PALAM:4 >= PALAMLV:4
	TIMES SOURCE:7 , 0.20
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:1 += 5
PRINTL Ａ経験＋５

IF EXP:52 == 0 && EXP:53 == 0 
	EXP:50 += 1
	PRINTL 異常経験＋１
ENDIF

EXP:53 += 1
PRINTL Ａ拡張経験＋1

A = 1
B = NO:PLAYER + 899
IF TALENT:140 == 0 && TALENT:PLAYER:140 == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:40 += A
	CFLAG:B += A
ELSEIF TALENT:140 && TALENT:PLAYER:140
	PRINTFORML %EXPNAME:41%+{A}
	EXP:41 += A
	CFLAG:B += A
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


