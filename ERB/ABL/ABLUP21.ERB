;ゲイ中毒LVUP判定
@DECIDE_ABLUP21
#DIM ABLUPAble = 0
;条件別にＯＫかダメかを記録する
FirstCond = 0


IF ABL:ゲイ中毒 == 0
	MultiJuelRequire = 3000
	CJuelRequire = 10000
	ExpRequire = 1000
ELSEIF ABL:ゲイ中毒 == 1
	MultiJuelRequire = 8000
	CJuelRequire = 25000
	ExpRequire = 1500
ELSEIF ABL:ゲイ中毒 == 2
	MultiJuelRequire = 15000
	CJuelRequire = 50000
	ExpRequire = 2000
ELSEIF ABL:ゲイ中毒 == 3
	MultiJuelRequire = 30000
	CJuelRequire = 100000
	ExpRequire = 4500
ELSEIF ABL:ゲイ中毒 == 4
	MultiJuelRequire = 55000
	CJuelRequire = 300000
	ExpRequire = 6000
ELSEIF ABL:ゲイ中毒 == 5
	MultiJuelRequire = 60000
	CJuelRequire = 350000
	ExpRequire = 6500
ELSEIF ABL:ゲイ中毒 == 6
	MultiJuelRequire = 65000
	CJuelRequire = 400000
	ExpRequire = 7000
ELSEIF ABL:ゲイ中毒 == 7
	MultiJuelRequire = 70000
	CJuelRequire = 450000
	ExpRequire = 7500
ELSEIF ABL:ゲイ中毒 == 8
	MultiJuelRequire = 75000
	CJuelRequire = 500000
	ExpRequire = 8000
ELSEIF ABL:ゲイ中毒 == 9
	MultiJuelRequire = 80000
	CJuelRequire = 550000
	ExpRequire = 9000
ENDIF

;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES MultiJuelRequire , 2.00
	TIMES CJuelRequire , 2.00
	TIMES ExpRequire , 2.00
ENDIF
;中毒しやすい
IF TALENT:中毒しやすい
	TIMES MultiJuelRequire , 0.50
	TIMES CJuelRequire , 0.50
	TIMES ExpRequire , 0.50
ENDIF

;ＬＶ２から３に上げるときは異常経験必要（素質：[両刀][中毒しやすい]なら無視できる）
IF ABL:ゲイ中毒 == 2 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 == 0
		;異常経験が不足
		FirstCond |= 2
		J |= 2
	ENDIF
;ＬＶ３から４に上げるときは異常経験2以上必要（素質：[両刀][中毒しやすい]なら無視できる）
ELSEIF ABL:ゲイ中毒 == 3 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 2
		;異常経験が不足
		FirstCond |= 2
		J |= 2
	ENDIF
;ＬＶ４から５に上げるときは異常経験3以上必要（素質：[両刀][中毒しやすい]なら無視できる）
ELSEIF ABL:ゲイ中毒 == 4 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 3
		;異常経験が不足
		FirstCond |= 2
		J |= 2
	ENDIF
;ＬＶ８から９に上げるときは異常経験7以上必要（素質：[両刀][中毒しやすい]なら無視できる）
ELSEIF ABL:ゲイ中毒 == 8 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 7
		;異常経験が不足
		FirstCond |= 2
		J |= 2
	ENDIF
ENDIF

;奉仕精神が必要
IF ABL:奉仕精神 < ABL:ゲイ中毒 + 1
	FirstCond |= 4
	J |= 4
ENDIF

;快ExpRequireの珠で上げる
SIF JUEL:快Ｃ < CJuelRequire
	FirstCond |= 1
;欲情の珠で上げる
SIF JUEL:欲情 < MultiJuelRequire
	FirstCond |= 1
;屈服の珠で上げる
SIF JUEL:屈服 < MultiJuelRequire
	FirstCond |= 1
;レズ経験が必要
SIF EXP:ゲイ経験 < ExpRequire
	FirstCond |= 2

IF FirstCond == 0
	ABLUPAble = 1
ENDIF

