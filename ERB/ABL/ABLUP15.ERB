	CALL DECIDE_ABLUP15
	IF SecondCond != 0
		BREAK
	ENDIF
	LvUPNum += 1
	ABL:自慰中毒 += 1
	JUEL:欲情 -= YokujouJuelRequire
	JUEL:快Ｃ -= CJuelRequire
