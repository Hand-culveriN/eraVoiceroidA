;自慰中毒LVUP判定
@DECIDE_ABLUP15
#DIM DYNAMIC ABLUPAble = 0
ABLUPAble = 0
;条件別にＯＫかダメかを記録する
FirstCond = 0
SecondCond = 0

IF ABL:自慰中毒 == 0
	YokujouJuelRequire = 3000
	CJuelRequire = 10000
	ChijouJuelRequire = 1000
	ExpRequire:0 = 100
