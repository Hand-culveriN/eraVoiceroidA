@DECIDE_ABLUP99
#DIM ABLUPAble = 0
;条件別にＯＫかダメかを記録する
KuppukuCond = 0


IF MARK:反発刻印 == 1
	KuppukuJuelRequire = 3000
ELSEIF MARK:反発刻印 == 2
	KuppukuJuelRequire = 5000
ELSEIF MARK:反発刻印 == 3
	KuppukuJuelRequire = 10000
ENDIF

;反発刻印Lvと同じLvの屈服刻印が必要
SIF MARK:反発刻印 > MARK:屈服刻印
	KuppukuCond |= 2

;反発刻印Lvと同じLvの従順が必要
SIF MARK:反発刻印 > ABL:従順
	KuppukuCond |= 4

;屈服の珠で減らす
SIF JUEL:屈服 < KuppukuJuelRequire
	KuppukuCond |= 1

IF KuppukuCond == 0
	ABLUPAble = 1
ENDIF
RETURN ABLUPAble

