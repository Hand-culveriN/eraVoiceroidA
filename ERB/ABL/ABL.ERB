@SHOW_JUEL
#DIM DYNAMIC LineNum = 0
#DIM DYNAMIC PalamNo = 0
DRAWLINE
T = TARGET
CALL SHOW_INFO_EXP


REPEAT 13
	IF COUNT == 12
		PalamNo = 100
	ELSE
		PalamNo = COUNT
	ENDIF

	PRINTFORM %PALAMNAME:PalamNo%の珠：

	;表示位置そろえる
	IF JUEL:PalamNo < 10
		PRINT       
	ELSEIF JUEL:PalamNo < 100
		PRINT      
	ELSEIF JUEL:PalamNo < 1000
		PRINT     
	ELSEIF JUEL:PalamNo < 10000
		PRINT    
	ELSEIF JUEL:PalamNo < 100000
		PRINT   
	ELSEIF JUEL:PalamNo < 1000000
		PRINT  
	ENDIF
	PRINTV JUEL:PalamNo

	;改行or表示位置あけ
	IF LineNum % 4 == 3
		PRINTL 
	ELSE
		PRINT 　
	ENDIF
	LineNum = LineNum + 1
REND
PRINTL 　
DRAWLINE




