;Ａ感覚LvUP判定
@DECIDE_ABLUP5
#DIM DYNAMIC ABLUPAble = 0
ABLUPAble = 0
;条件別にＯＫかダメかを記録する
ACond = 0
;能力アップ可能なら1にする
ABLUPAble = 0

;恋慕、親愛、淫乱、娼婦はMAXLV10
IF ABL:Ａ感覚 >= 10
	ACond = 256
	RETURN 0
ELSEIF ABL:Ａ感覚 >= 5 && TALENT:恋慕 == 0 && TALENT:親愛 == 0 && TALENT:淫乱 == 0 && TALENT:娼婦 == 0
	ACond = 256
	RETURN 0
ENDIF

IF ABL:Ａ感覚 == 0
	AJuelRequire = 1
	ExpRequire = 2
ELSEIF ABL:Ａ感覚 == 1
	AJuelRequire = 50
	ExpRequire = 10
	SIF EXP:Ａ経験 >= EXPLV:3
		AJuelRequire = 20
ELSEIF ABL:Ａ感覚 == 2
	AJuelRequire = 400
	ExpRequire = 30
	SIF EXP:Ａ経験 >= EXPLV:4
		AJuelRequire = 100
ELSEIF ABL:Ａ感覚 == 3
	AJuelRequire = 5000
	ExpRequire = 75
	SIF EXP:Ａ経験 >= EXPLV:5
		AJuelRequire = 4000
ELSEIF ABL:Ａ感覚 == 4
	AJuelRequire = 15000
	ExpRequire = 150
	SIF EXP:Ａ経験 >= EXPLV:5
		AJuelRequire = 8000
ELSEIF ABL:Ａ感覚 == 5
	AJuelRequire = 30000
	ExpRequire = 230
	SIF EXP:Ａ経験 >= EXPLV:5
		AJuelRequire = 24000
ELSEIF ABL:Ａ感覚 == 6
	AJuelRequire = 40000
	ExpRequire = 270
ELSEIF ABL:Ａ感覚 == 7
	AJuelRequire = 50000
	ExpRequire = 360
ELSEIF ABL:Ａ感覚 == 8
	AJuelRequire = 60000
	ExpRequire = 420
ELSEIF ABL:Ａ感覚 == 9
	AJuelRequire = 70000
	ExpRequire = 500
ENDIF

;淫乱
IF TALENT:淫乱
	TIMES AJuelRequire , 0.80
	TIMES ExpRequire , 0.80
ENDIF
;娼婦
IF TALENT:娼婦
	TIMES AJuelRequire , 0.50
	TIMES ExpRequire , 0.50
ENDIF

;0になった場合は1にする
SIF AJuelRequire == 0
	AJuelRequire = 1

;快Ａの珠で上げる
SIF JUEL:快Ａ < AJuelRequire
	ACond |= 1

SIF EXP:Ａ経験 < ExpRequire
	ACond |= 2

IF ACond == 0
	ABLUPAble = 1
ENDIF

RETURN ABLUPAble

