;Ｖ感覚LvUPの判定
@DECIDE_ABLUP4
#DIM ABLUPAble = 0
;条件別にＯＫかダメかを記録する
VCond = 0
;能力アップ可能なら1にする
ABLUPAble = 0

IF ABL:Ｖ感覚 == 0
	VJuelRequire = 1
ELSEIF ABL:Ｖ感覚 == 1
	VJuelRequire = 20
ELSEIF ABL:Ｖ感覚 == 2
	VJuelRequire = 400
ELSEIF ABL:Ｖ感覚 == 3
	VJuelRequire = 5000
ELSEIF ABL:Ｖ感覚 == 4
	VJuelRequire = 15000
ELSEIF ABL:Ｖ感覚 == 5
	VJuelRequire = 30000
ELSEIF ABL:Ｖ感覚 == 6
	VJuelRequire = 40000
ELSEIF ABL:Ｖ感覚 == 7
	VJuelRequire = 50000
ELSEIF ABL:Ｖ感覚 == 8
	VJuelRequire = 60000
ELSEIF ABL:Ｖ感覚 == 9
	VJuelRequire = 70000
ENDIF

;淫乱
SIF TALENT:淫乱
	TIMES VJuelRequire , 0.80
;娼婦
SIF TALENT:娼婦
	TIMES VJuelRequire , 0.50

;0になった場合は1にする
SIF VJuelRequire == 0
	VJuelRequire = 1

;快Ｖの珠で上げる
SIF JUEL:快Ｖ < VJuelRequire
	VCond |= 1

IF VCond == 0
	ABLUPAble = 1
ENDIF

RETURN ABLUPAble

