FOR COUNT, 0, 9999 - ABL:奉仕精神
	CALL DECIDE_ABLUP7
	IF KyoujunCond != 0
		BREAK
	ENDIF
	LvUPNum += 1
	ABL:奉仕精神 += 1
	JUEL:恭順 -=  KyoujunJuelRequire
NEXT
CALL PRINT_AUT_ABLUP(7, 5, -1, -1, LvUPNum)
LvUPNum = 0

;習得の珠
FOR COUNT, 0, 9999 - ABL:奉仕精神
	CALL DECIDE_ABLUP7
	IF ShutokuCond != 0
		BREAK
	ENDIF
	LvUPNum += 1
	ABL:奉仕精神 += 1
