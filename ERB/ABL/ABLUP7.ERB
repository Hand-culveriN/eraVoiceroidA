#DIM DYNAMIC LvUPNum = 0

;上げられなかったら無視
CALL ISABLUP7
SIF RESULT == 0
	RETURN 0

;屈服の珠
FOR COUNT, 0, 9999 - ABL:奉仕精神
	CALL DECIDE_ABLUP7
	IF KuppukuCond != 0
		BREAK
	ENDIF
	LvUPNum += 1
	ABL:奉仕精神 += 1
	JUEL:屈服 -=  KuppukuJuelRequire
NEXT
CALL PRINT_AUT_ABLUP(7, 7, -1, -1, LvUPNum)
