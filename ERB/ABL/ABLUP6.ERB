	BCond = 256
	RETURN 0
ELSEIF ABL:Ｂ感覚 >= 5 && TALENT:恋慕 == 0 && TALENT:親愛 == 0 && TALENT:淫乱 == 0 && TALENT:娼婦 == 0
	BCond = 256
	RETURN 0
ENDIF

IF ABL:Ｂ感覚 == 0
	BJuelRequire = 1
ELSEIF ABL:Ｂ感覚 == 1
	BJuelRequire = 20
ELSEIF ABL:Ｂ感覚 == 2
	BJuelRequire = 400
ELSEIF ABL:Ｂ感覚 == 3
	BJuelRequire = 5000
ELSEIF ABL:Ｂ感覚 == 4
	BJuelRequire = 15000
ELSEIF ABL:Ｂ感覚 == 5
	BJuelRequire = 30000
ELSEIF ABL:Ｂ感覚 == 6
	BJuelRequire = 40000
ELSEIF ABL:Ｂ感覚 == 7
	BJuelRequire = 50000
ELSEIF ABL:Ｂ感覚 == 8
	BJuelRequire = 60000
ELSEIF ABL:Ｂ感覚 == 9
	BJuelRequire = 70000
ENDIF

;淫乱
SIF TALENT:淫乱
	TIMES BJuelRequire , 0.80
;娼婦
SIF TALENT:娼婦
	TIMES BJuelRequire , 0.50

;貧乳
IF TALENT:貧乳
	TIMES BJuelRequire , 0.80
ENDIF

;絶壁
IF TALENT:絶壁
	TIMES BJuelRequire , 0.65
ENDIF

;巨乳
IF TALENT:巨乳
	TIMES BJuelRequire , 1.10
ENDIF

;爆乳
IF TALENT:爆乳
	TIMES BJuelRequire , 1.15
ENDIF

;0になった場合は1にする
SIF BJuelRequire == 0
	BJuelRequire = 1

;快Ｂの珠で上げる
SIF JUEL:快Ｂ < BJuelRequire
	BCond |= 1

IF BCond == 0
	ABLUPAble = 1
ENDIF
RETURN ABLUPAble

