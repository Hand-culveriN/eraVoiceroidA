	FirstCond |= 1
;快BJuelRequireの珠で上げる
SIF JUEL:快Ｂ < BJuelRequire
	FirstCond |= 1
;屈服の珠で上げる
SIF JUEL:屈服 < KuppukuJuelRequire
	FirstCond |= 1
;噴乳経験が必要
SIF EXP:噴乳経験 < ExpRequire
	FirstCond |= 2
IF FirstCond == 0
	ABLUPAble = 1
ENDIF
RETURN ABLUPAble

